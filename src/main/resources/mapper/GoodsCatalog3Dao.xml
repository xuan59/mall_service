<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mall.entity.goods.GoodsCatalog3Dao">

    <resultMap type="com.mall.entity.goods.GoodsCatalog3" id="GoodsCatalog3Map">
        <result property="id" column="id" jdbcType="OTHER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="catalog2Id" column="catalog2_id" jdbcType="OTHER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="GoodsCatalog3Map">
        select
          id, name, catalog2_id
        from mall.goods_catalog3
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="GoodsCatalog3Map">
        select
          id, name, catalog2_id
        from mall.goods_catalog3
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="GoodsCatalog3Map">
        select
        id, name, catalog2_id
        from mall.goods_catalog3
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="catalog2Id != null">
                and catalog2_id = #{catalog2Id}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into mall.goods_catalog3(catalog2_id)
        values (#{catalog2Id})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into mall.goods_catalog3(catalog2_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.catalog2Id})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into mall.goods_catalog3(catalog2_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.catalog2Id})
        </foreach>
        on duplicate key update
        catalog2_id = values(catalog2_id)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mall.goods_catalog3
        <set>
            <if test="catalog2Id != null">
                catalog2_id = #{catalog2Id},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from mall.goods_catalog3 where id = #{id}
    </delete>

</mapper>