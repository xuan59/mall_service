<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mall.entity.goods.GoodsCatalog2Dao">

    <resultMap type="com.mall.entity.goods.GoodsCatalog2" id="GoodsCatalog2Map">
        <result property="id" column="id" jdbcType="OTHER"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="catalog1Id" column="catalog1_id" jdbcType="OTHER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="GoodsCatalog2Map">
        select
          id, name, catalog1_id
        from mall.goods_catalog2
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="GoodsCatalog2Map">
        select
          id, name, catalog1_id
        from mall.goods_catalog2
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="GoodsCatalog2Map">
        select
        id, name, catalog1_id
        from mall.goods_catalog2
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name = #{name}
            </if>
            <if test="catalog1Id != null">
                and catalog1_id = #{catalog1Id}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into mall.goods_catalog2(catalog1_id)
        values (#{catalog1Id})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into mall.goods_catalog2(catalog1_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.catalog1Id})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into mall.goods_catalog2(catalog1_id)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.catalog1Id})
        </foreach>
        on duplicate key update
        catalog1_id = values(catalog1_id)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update mall.goods_catalog2
        <set>
            <if test="catalog1Id != null">
                catalog1_id = #{catalog1Id},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from mall.goods_catalog2 where id = #{id}
    </delete>

</mapper>